              </tr>
            </thead>
            <tbody >
{% for budget in budgets %}
              <tr>
<td>{{ budget.article }}</td>
<td>{{ budget.parag }}</td>
<td>{{ budget.sParag }}</td>
<td>{{ budget.region }}</td>
<td>{{ budget.labelLine}}</td>
<td>{{ budget.ministere }}</td>
</tr>
            </tbody>
  {% endfor %}
            <tfoot>
              <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
