{% trans_default_domain 'FOSUserBundle' %}
<div class="content">
    <div class="container">
        <div class="layout layout-main-right layout-stack-sm">
            {% include "OCUserBundle:Profile:menu_setting.html.twig" %}
            <div class="col-md-9 col-sm-8 layout-main">
                <div id="settings-content" class="tab-content stacked-content">
                    <div class="tab-pane fade in active" id="profile-tab">
                        <div class="heading-block">
                            <h3>
                                Edit Profile
                            </h3>
                        </div>
                        <br><br>
                        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal'  } }) }}
                        <div class="form-group">
                            <label class="col-md-3 control-label">Avatar</label>
                            <div class="col-md-7">
                                <div class="fileinput fileinput-new" style="width: 50%;" data-provides="fileinput">
                                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="min-width: 125px; min-height: 125px;">
                                    {%if user and user.checkExisteFile == 0 %}
                                        <img src="{{ asset(user.webPathImage) }}" alt="Avatar">
                                    {% else %}
                                        <img src="{{ asset('img/default.png') }}" alt="">

                                    {% endif %}
                                    </div>
                                    <div>
                                        <span class="btn btn-default btn-file">
                                            {{ form_widget(form.file) }}
                                            {{ form_errors(form.file) }}
                                        </span>
                                    </div>
                                </div> <!-- /.fileupload -->
                            </div> <!-- /.col -->
                        </div> <!-- /.form-group -->
                        <div class="form-group">
                        {{ form_label(form.username,'Username',{'attr': {'class': 'col-md-3 control-label'}}) }}    
                        {{ form_widget(form.username,{'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.username) }}
                        </div> <!-- /.form-group -->
                        <div class="form-group">
                        {{ form_label(form.name,'Firstname') }}    
                        {{ form_widget(form.name,{'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                        </div> <!-- /.form-group -->
                        <div class="form-group">
                        {{ form_label(form.prenom,'Lastname') }}    
                        {{ form_widget(form.prenom,{'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prenom) }}
                        </div> <!-- /.form-group -->
                        <div class="form-group">
                        {{ form_label(form.website,'Website') }}    
                        {{ form_widget(form.website,{'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.website) }}
                        </div> <!-- /.form-group -->
                        <div class="form-group">
                        {{ form_label(form.aboutYou,'About you') }}    
                        {{ form_widget(form.aboutYou,{'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.aboutYou) }}
                        </div> <!-- /.form-group -->
                        <div class="form-group">
                            <div class="col-md-7 col-md-push-3">
                                <input type="submit" class="btn btn-primary" value="Save Changes">
                                &nbsp;
                                <button type="reset" class="btn btn-default">Cancel</button>
                            </div> <!-- /.col -->
                        </div> <!-- /.form-group -->

{{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>